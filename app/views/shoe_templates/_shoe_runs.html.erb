<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Runs

    <a data-toggle="collapse" href="#shoe_runs_new_form">
      Add run
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @shoe.runs.each do |run| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/runs/<%= run.id %>">
          <%= run.date_of_run %>
        </a>

        <%if current_user == run.user %>
          <a href="/delete_run_from_shoe/<%= run.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="shoe_runs_new_form">
        <%= render partial: "shoe_templates/shoe_runs_new_form" %>
      </div>
    </div>

  </ul>
</div>
