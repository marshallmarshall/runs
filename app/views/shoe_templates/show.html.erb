<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Shoe #<%= @shoe.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/shoes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @shoe.user %>
          <a href="/shoes/<%= @shoe.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit shoe
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @shoe.user %>
          <a href="/delete_shoe/<%= @shoe.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete shoe
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Shoe name
      </dt>
      <dd>
        <%= @shoe.shoe_name %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @shoe.user.present? %>
          <a href="/users/<%= @shoe.user_id %>">
            <%= @shoe.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@shoe.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@shoe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "shoe_templates/shoe_runs" %>
  </div>
</div>
