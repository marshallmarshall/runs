<h1>
  Add a new shoe
</h1>


<hr>

<!-- Form shoe start -->
<form action="/create_shoe" method="post">
<!-- Form shoe end -->

  <!-- Label and input for shoe_name start -->
  <div class="form-group">
    <label for="shoe_name">
      Shoe name
    </label>

    <!-- Input for shoe_name start -->
    <input type="text" id="shoe_name" name="shoe_name" class="form-control">
    <!-- Input for shoe_name end -->
  </div>
  <!-- Label and input for shoe_name end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create shoe
  </button>
</form>

<hr>

<a href="/shoes">
  Go back
</a>
