<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Weekly mileage #<%= @weekly_mileage.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/weekly_mileages" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @weekly_mileage.user %>
          <a href="/weekly_mileages/<%= @weekly_mileage.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit weekly_mileage
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @weekly_mileage.user %>
          <a href="/delete_weekly_mileage/<%= @weekly_mileage.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete weekly_mileage
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Week starting
      </dt>
      <dd>
        <%= @weekly_mileage.week_starting %>
      </dd>

      <dt>
        Weekly mileage
      </dt>
      <dd>
        <%= @weekly_mileage.weekly_mileage %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @weekly_mileage.user.present? %>
          <a href="/users/<%= @weekly_mileage.user_id %>">
            <%= @weekly_mileage.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@weekly_mileage.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@weekly_mileage.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

