<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All shoes
    </h1>

    <a href="/shoes/new" class="btn btn-block btn-outline-secondary">
      Add a new shoe
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Shoe name
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @shoes.each do |shoe| %>
      <tr>
        <!-- Display shoe.id start -->
        <td>
          <%= shoe.id %>
        </td>
        <!-- Display shoe.id end -->

        <!-- Display shoe.shoe_name start -->
        <td>
          <%= shoe.shoe_name %>
        </td>
        <!-- Display shoe.shoe_name end -->

        <!-- Display shoe.user_id start -->
        <td>
          <%= shoe.user.email %>
        </td>
        <!-- Display shoe.user_id end -->

        <!-- Display shoe.created_at start -->
        <td>
          <%= time_ago_in_words(shoe.created_at) %> ago
        </td>
        <!-- Display shoe.created_at end -->

        <!-- Display shoe.updated_at start -->
        <td>
          <%= time_ago_in_words(shoe.updated_at) %> ago
        </td>
        <!-- Display shoe.updated_at end -->

        <td>
          <a href="/shoes/<%= shoe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
