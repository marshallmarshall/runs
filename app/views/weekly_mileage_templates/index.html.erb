<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All weekly mileages
    </h1>

    <a href="/weekly_mileages/new" class="btn btn-block btn-outline-secondary">
      Add a new weekly mileage
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Week starting
        </th>

        <th>
          Weekly mileage
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @weekly_mileages.each do |weekly_mileage| %>
      <tr>
        <!-- Display weekly_mileage.id start -->
        <td>
          <%= weekly_mileage.id %>
        </td>
        <!-- Display weekly_mileage.id end -->

        <!-- Display weekly_mileage.week_starting start -->
        <td>
          <%= weekly_mileage.week_starting %>
        </td>
        <!-- Display weekly_mileage.week_starting end -->

        <!-- Display weekly_mileage.weekly_mileage start -->
        <td>
          <%= weekly_mileage.weekly_mileage %>
        </td>
        <!-- Display weekly_mileage.weekly_mileage end -->

        <!-- Display weekly_mileage.user_id start -->
        <td>
          <%= weekly_mileage.user.email %>
        </td>
        <!-- Display weekly_mileage.user_id end -->

        <!-- Display weekly_mileage.created_at start -->
        <td>
          <%= time_ago_in_words(weekly_mileage.created_at) %> ago
        </td>
        <!-- Display weekly_mileage.created_at end -->

        <!-- Display weekly_mileage.updated_at start -->
        <td>
          <%= time_ago_in_words(weekly_mileage.updated_at) %> ago
        </td>
        <!-- Display weekly_mileage.updated_at end -->

        <td>
          <a href="/weekly_mileages/<%= weekly_mileage.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @weekly_mileages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
