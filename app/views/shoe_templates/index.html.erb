<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All shoes
    </h1>

    <a href="/shoes/new" class="btn btn-block btn-outline-secondary">
      Add a new shoe
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "shoe_templates/shoes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Shoe name
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @shoes.each do |shoe| %>
      <tr>
        <td>
          <%= shoe.id %>
        </td>

        <td>
          <%= shoe.shoe_name %>
        </td>

        <td>
          <% if shoe.user.present? %>
            <a href="/users/<%= shoe.user.id %>">
              <%= shoe.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(shoe.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(shoe.updated_at) %> ago
        </td>

        <td>
          <a href="/shoes/<%= shoe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @shoes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
