<h1>
  Add a new shoe
</h1>


<hr>

<!-- Form shoe start -->
<form action="/create_shoe" method="post">
<!-- Form shoe end -->

  <!-- Label and input for shoe_name start -->
  <div class="form-group">
    <label for="shoe_name">
      Shoe name
    </label>

    <!-- Input for shoe_name start -->
    <input type="text" id="shoe_name" name="shoe_name" class="form-control">
    <!-- Input for shoe_name end -->
  </div>
  <!-- Label and input for shoe_name end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @shoe.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create shoe
  </button>
</form>

<hr>

<a href="/shoes">
  Go back
</a>
